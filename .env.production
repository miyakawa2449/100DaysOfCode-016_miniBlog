# 本番環境用設定ファイル（.env.production）
# デプロイ時に .env にコピーして使用

# MySQL Database Configuration (本番用)
DATABASE_URL=mysql+pymysql://miniblog_user:YOUR_SECURE_PASSWORD@localhost/miniblog_prod

# Flask Configuration (本番用)
FLASK_DEBUG=false
SECRET_KEY=YOUR_PRODUCTION_SECRET_KEY_64_CHARACTERS_LONG_SECURE_STRING
FLASK_HOST=127.0.0.1
FLASK_PORT=5000

# Security Settings (本番用)
WTF_CSRF_ENABLED=true
WTF_CSRF_TIME_LIMIT=3600
SESSION_LIFETIME_HOURS=24
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# Custom URL Paths for Security (本番用 - 変更推奨)
ADMIN_URL_PREFIX=secure-management-2024
LOGIN_URL_PATH=auth-access-portal

# AWS SES Configuration (本番用)
MAIL_DEBUG=false
AWS_REGION=ap-northeast-1
AWS_ACCESS_KEY_ID=YOUR_ACCESS_KEY_ID
AWS_SECRET_ACCESS_KEY=YOUR_SMTP_PASSWORD_FROM_SES
MAIL_DEFAULT_SENDER=noreply@yourdomain.com

# File Upload Settings (本番用)
MAX_CONTENT_LENGTH=16777216

# Performance Settings
SQLALCHEMY_ENGINE_OPTIONS_POOL_SIZE=10
SQLALCHEMY_ENGINE_OPTIONS_POOL_RECYCLE=300
SQLALCHEMY_ENGINE_OPTIONS_POOL_PRE_PING=true